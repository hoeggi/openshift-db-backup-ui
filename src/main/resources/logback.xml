<configuration>
    <conversionRule conversionWord="highlightex" converterClass="io.github.hoeggi.openshiftdb.HighlightingCompositeConverterEx" />

    <appender name="STDOUT_DETAIL" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight(%-5level) %d{HH:mm:ss.SSS} %logger{0} [%thread] [%file:%line] - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlightex(%-5level %d{HH:mm:ss.SSS} [%file:%line] %msg%n %throwable)</pattern>
        </encoder>
    </appender>

    <appender name="MEMORY" class="io.github.hoeggi.openshiftdb.MemoryAppender">
        <encoder>
            <pattern>%highlight(%-5level %d{HH:mm:ss.SSS} [%file:%line] %msg%n %rEx)</pattern>
        </encoder>
    </appender>



    <Logger name="ktor" level="info"/>
    <Logger name="ktor.application" level="info"/>
    <Logger name="io.netty" level="info"/>
    <Logger name="ktor.calls" level="debug"/>


    <root level="debug">
        <appender-ref ref="STDOUT"/>
<!--        <appender-ref ref="MEMORY"/>-->
    </root>
</configuration>